<div class="image-view" id="cover_picture">
  <% if object.cover_picture && page == 'edit' %>
    <%= render partial: 'cover_picture', locals: {object: object} %>
  <% end %>
</div>
<% if object.pictures %>
  <% object.pictures.each do |picture| %>
    <div class="image-view" id="<%= picture.id %>">
      <%= link_to(picture.image.url, target: '_blank') do %>
        <%= image_tag(picture.image.url(:thumb)) %>
      <% end %>
      <% if page == 'edit' %>
        <p align="center">
          <%= link_to "Delete", picture_path(id: picture.id), method: :delete, remote: true, data: {confirm: 'Are you sure?'} %>
          <%= link_to "Cover", set_cover_admin_show_path(picture_id: picture.id), method: :post, remote: true %>
        </p>
      <% end %>
    </div>
  <% end %>
<% end %>